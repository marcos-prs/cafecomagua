<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/subscription_title"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Status Premium (se já for premium) -->
            <TextView
                android:id="@+id/text_premium_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/premium_status_active"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/ideal_green"
                android:padding="12dp"
                android:background="@drawable/border_gold_thin"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp"
                tools:visibility="visible" />

            <!-- Seção de Assinatura -->
            <LinearLayout
                android:id="@+id/layout_subscription_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/subscription_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/subscription_subtitle"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="16dp" />

                <!-- Card de Assinatura -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/ideal_green"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Badge Popular -->
                        <TextView
                            android:id="@+id/badge_popular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POPULAR"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@drawable/popular_badge_background"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monthly_subscription"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_subscription_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 3,89/mês"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/ideal_green"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="12dp"
                            tools:text="R$ 3,89/mês" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/subscription_benefits"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Divisor -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOutline"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Seção de Doações -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/donation_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_subtitle_donation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_pagar_cafezinho"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="16dp" />

            <!-- Cards de Doação -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@android:color/transparent"
                android:showDividers="middle"
                android:dividerPadding="12dp">

                <!-- Café Pequeno -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_support_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="☕"
                            android:textSize="32sp"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_cafe_pequeno"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_small_coffee_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 5,00"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                tools:text="R$ 5,00" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Café Médio -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_support_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="☕☕"
                            android:textSize="28sp"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_cafe_medio"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_medium_coffee_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 10,00"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                tools:text="R$ 10,00" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Café Grande -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_support_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="☕☕☕"
                            android:textSize="24sp"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_cafe_grande"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_large_coffee_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 15,00"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                tools:text="R$ 15,00" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Link para gerenciar assinatura -->
            <TextView
                android:id="@+id/text_manage_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_subscription"
                android:textSize="12sp"
                android:textColor="@color/ideal_green"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Botão Continuar -->
            <Button
                android:id="@+id/button_continue_to_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_continuar_para_resultado"
                android:layout_marginTop="24dp"
                style="@style/Widget.Material3.Button.TonalButton" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>