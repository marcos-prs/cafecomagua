<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base do aplicativo (CORRIGIDO) -->
    <style name="Theme.CafeComAgua" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/marrom_avermelhado_principal</item>
        <item name="colorPrimaryVariant">@color/marrom_avermelhado_profundo</item>
        <item name="colorOnPrimary">@color/creme_texto</item>
        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/dourado_elegante</item>
        <item name="colorSecondaryVariant">@color/dourado</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Cor de fundo -->
        <item name="android:colorBackground">@color/marrom_avermelhado_profundo</item>

        <!--
          AÇÃO CORRIGIDA: A linha 'android:statusBarColor' foi removida.
          A função enableEdgeToEdge() no código Kotlin agora gerencia isso,
          deixando as barras de status e navegação transparentes.
        -->

        <!-- Define a cor dos ícones da barra de status (false = ícones claros) -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Opcional, mas recomendado: Garante que a barra de navegação também seja transparente -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Tema da Splash Screen -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.CafeComAgua</item>
    </style>

    <!-- Estilos de Texto -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/roboto_mono_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dourado_elegante</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/roboto_mono_family</item>
        <item name="android:textColor">@color/creme_texto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Label" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/roboto_mono_family</item>
        <item name="android:textColor">@color/dourado_elegante</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo de Botão Primário -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dourado_elegante</item>
        <item name="android:textColor">@color/marrom_avermelhado_profundo</item>
        <item name="android:fontFamily">@font/roboto_mono_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilo para botões secundários (vazados) -->
    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/dourado_elegante</item>
        <item name="android:textColor">@color/dourado_elegante</item>
        <item name="android:fontFamily">@font/roboto_mono_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>
