<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainLayoutBackground"
    tools:context=".SupportActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/border_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_gold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                style="@style/Widget.App.Toolbar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/title_apoie_nosso_trabalho"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:textColor="?attr/colorOnSurface"
                    android:textAllCaps="true"
                    android:textSize="25sp" />

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/scrollViewSupport"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintBottom_toTopOf="@id/buttonContinueToResults"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adViewSupportBanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:adSize="MEDIUM_RECTANGLE"
                    app:adUnitId="ca-app-pub-7526020095328101/1318180393"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/textViewRemoveAdsSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/desc_remover_anuncios"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/adViewSupportBanner" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardRemoveAds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/dourado_elegante"
                    app:strokeColor="@color/dourado"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toBottomOf="@id/textViewRemoveAdsSubtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="320dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iconRemoveAds"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_coffee"
                            app:tint="@color/dourado"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:contentDescription="@string/icone_remover_anuncios"/>

                        <TextView
                            android:id="@+id/textViewRemoveAdsTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/label_remover_anuncios"
                            android:textAppearance="@style/TextAppearance.App.Body"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/iconRemoveAds"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/textViewRemoveAdsPrice"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/textViewRemoveAdsPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="R$ 5,99"
                            android:textAppearance="@style/TextAppearance.App.Body"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/textViewDonationSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/desc_pagar_cafezinho"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardRemoveAds" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/donationContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/textViewDonationSubtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" >

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSupportSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/dourado_elegante"
                        app:strokeColor="@color/dourado_claro"
                        app:strokeWidth="1dp"
                        app:cardCornerRadius="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_max="320dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/iconSmall"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_coffee"
                                app:tint="@color/marrom_avermelhado_principal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:contentDescription="@string/icone_cafe_pequeno"/>

                            <TextView
                                android:id="@+id/textViewSmallCoffeeTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/label_cafe_pequeno"
                                android:textAppearance="@style/TextAppearance.App.Body"
                                android:textSize="16sp"
                                android:layout_marginStart="16dp"
                                app:layout_constraintStart_toEndOf="@id/iconSmall"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/textViewSmallCoffeePrice"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <TextView
                                android:id="@+id/textViewSmallCoffeePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="R$ 1,99"
                                android:textAppearance="@style/TextAppearance.App.Body"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSupportMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardBackgroundColor="@color/dourado_elegante"
                        app:strokeColor="@color/dourado_claro"
                        app:strokeWidth="1dp"
                        app:cardCornerRadius="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintTop_toBottomOf="@id/cardSupportSmall"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_max="320dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/iconMedium"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_coffee"
                                app:tint="@color/marrom_avermelhado_principal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:contentDescription="@string/icone_cafe_medio"/>

                            <TextView
                                android:id="@+id/textViewMediumCoffeeTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/label_cafe_medio"
                                android:textAppearance="@style/TextAppearance.App.Body"
                                android:textSize="16sp"
                                android:layout_marginStart="16dp"
                                app:layout_constraintStart_toEndOf="@id/iconMedium"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/textViewMediumCoffeePrice"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <TextView
                                android:id="@+id/textViewMediumCoffeePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="R$ 4,99"
                                android:textAppearance="@style/TextAppearance.App.Body"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSupportLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardBackgroundColor="@color/dourado_elegante"
                        app:strokeColor="@color/dourado_claro"
                        app:strokeWidth="1dp"
                        app:cardCornerRadius="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintTop_toBottomOf="@id/cardSupportMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_max="320dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">
                            <ImageView
                                android:id="@+id/iconLarge"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_coffee"
                                app:tint="@color/marrom_avermelhado_principal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:contentDescription="@string/icone_cafe_grande"/>

                            <TextView
                                android:id="@+id/textViewLargeCoffeeTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/label_cafe_grande"
                                android:textAppearance="@style/TextAppearance.App.Body"
                                android:textSize="16sp"
                                android:layout_marginStart="16dp"
                                app:layout_constraintStart_toEndOf="@id/iconLarge"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/textViewLargeCoffeePrice"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <TextView
                                android:id="@+id/textViewLargeCoffeePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="R$ 9,99"
                                android:textAppearance="@style/TextAppearance.App.Body"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonContinueToResults"
            style="@style/Widget.App.Button.Tonal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_seguir_sem_apoiar"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="320dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>