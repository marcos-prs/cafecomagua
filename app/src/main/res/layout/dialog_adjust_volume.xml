<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- TÃ­tulo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”„ Ajustar Volume"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Receita original -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/background_rounded_light"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume original: "
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/textOriginalVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            android:textColor="@color/dourado_elegante"
            tools:text="1L" />
    </LinearLayout>

    <!-- BotÃµes rÃ¡pidos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha o novo volume:"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupVolumes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="false"
        android:layout_marginBottom="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip250ml"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250ml" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip500ml"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500ml" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1L"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1L" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2L"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2L" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3L"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3L" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5L"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5L" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Ou digite -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ou digite um valor personalizado:"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCustomVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volume (ml)"
        app:boxBackgroundMode="outline"
        app:suffixText="ml"
        app:helperText="Ex: 750, 1500, 4000"
        android:layout_marginBottom="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputCustomVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:imeOptions="actionDone" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Resultado calculado -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        android:layout_marginBottom="16dp" />

    <!-- âœ… CORREÃ‡ÃƒO 1: TextView agora aceita texto dinÃ¢mico -->
    <TextView
        android:id="@+id/labelAdjustedRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’§ Gotas para o novo volume:"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textStyle="bold"
        android:textColor="@color/dourado_elegante"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="ðŸ’§ Gotas para 2L:" />

    <!-- âœ… CORREÃ‡ÃƒO 2: ScrollView para evitar compressÃ£o em telas pequenas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="200dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutAdjustedDrops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textAdjustedCalcium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:paddingVertical="4dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="ðŸŸ¦ CÃ¡lcio: 8 gotas" />

            <TextView
                android:id="@+id/textAdjustedMagnesium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:paddingVertical="4dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="ðŸŸ© MagnÃ©sio: 4 gotas" />

            <TextView
                android:id="@+id/textAdjustedSodium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:paddingVertical="4dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="ðŸŸ¨ SÃ³dio: 2 gotas" />

            <TextView
                android:id="@+id/textAdjustedPotassium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:paddingVertical="4dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="ðŸŸª PotÃ¡ssio: 6 gotas" />
        </LinearLayout>
    </ScrollView>

    <!-- âœ… CORREÃ‡ÃƒO 3: BotÃµes com altura mÃ­nima garantida -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Fechar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSaveAdjusted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginStart="8dp"
            android:text="Salvar Ajuste"
            android:enabled="false" />
    </LinearLayout>

</LinearLayout>