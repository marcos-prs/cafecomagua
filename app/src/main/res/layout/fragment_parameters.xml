<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_parameters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainLayoutBackground"
    tools:context=".ui.evaluation.ParametersFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/border_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                style="@style/Widget.App.Toolbar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/title_parametros_avaliacao"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textSize="20sp" />

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintBottom_toTopOf="@+id/ad_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp">

                <!-- ✅ CAMPO 1: SÓDIO (nextFocusForward mantido como fallback) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutSodio"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_sodio_unidade"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextSodio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@id/editTextPH"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textViewSodioAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    tools:text="@string/avaliacao_ideal"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/layoutSodio"
                    app:layout_constraintEnd_toEndOf="@id/layoutSodio"/>

                <!-- ✅ CAMPO 2: PH (nextFocusForward mantido como fallback) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutPH"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/label_ph"
                    app:layout_constraintTop_toBottomOf="@id/textViewSodioAvaliacao"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@id/editTextResiduoEvaporacao"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textViewPHAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    tools:text="@string/avaliacao_aceitavel"
                    app:layout_constraintTop_toBottomOf="@id/layoutPH"
                    app:layout_constraintEnd_toEndOf="@id/layoutPH"/>

                <!-- ✅ CAMPO 3: RESÍDUO DE EVAPORAÇÃO -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutResiduo"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/label_residuo_unidade"
                    app:layout_constraintTop_toBottomOf="@id/textViewPHAvaliacao"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextResiduoEvaporacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textViewResiduoEvaporacaoAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    tools:text="@string/avaliacao_nao_recomendado"
                    app:layout_constraintTop_toBottomOf="@id/layoutResiduo"
                    app:layout_constraintEnd_toEndOf="@id/layoutResiduo"/>

                <!-- ✅ CAMPO CALCULADO: DUREZA (READ-ONLY) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutDureza"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/label_dureza_calculada"
                    app:layout_constraintTop_toBottomOf="@id/textViewResiduoEvaporacaoAvaliacao"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textViewDurezaCalculada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="70.5 mg/L"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textViewDurezaAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    tools:text="@string/avaliacao_ideal"
                    app:layout_constraintTop_toBottomOf="@id/layoutDureza"
                    app:layout_constraintEnd_toEndOf="@id/layoutDureza"/>

                <!-- ✅ CAMPO CALCULADO: ALCALINIDADE (READ-ONLY) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutAlcalinidade"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/label_alcalinidade_calculada"
                    app:layout_constraintTop_toBottomOf="@id/textViewDurezaAvaliacao"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textViewAlcalinidadeCalculada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="40.0 mg/L"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textViewAlcalinidadeAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    tools:text="@string/avaliacao_ideal"
                    app:layout_constraintTop_toBottomOf="@id/layoutAlcalinidade"
                    app:layout_constraintEnd_toEndOf="@id/layoutAlcalinidade"/>

                <Button
                    android:id="@+id/buttonResultados"
                    style="@style/Widget.App.Button.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/button_ver_resultados"
                    app:layout_constraintTop_toBottomOf="@id/textViewAlcalinidadeAvaliacao"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="320dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <!-- Container para o banner de anúncio -->
        <FrameLayout
            android:id="@+id/ad_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>