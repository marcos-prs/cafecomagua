<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_terceira"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".TerceiraActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/border_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_gold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ad_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_parametros_avaliacao"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textSize="24sp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp"/>

                <TextView
                    android:id="@+id/labelSodio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_sodio_unidade"
                    android:textAppearance="@style/TextAppearance.App.Label"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintStart_toStartOf="@id/editTextSodio"/>
                <EditText
                    android:id="@+id/editTextSodio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:inputType="numberDecimal"
                    android:hint="@string/hint_sodio"
                    android:background="@drawable/input_background"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/input_hint_color"
                    android:padding="12dp"
                    android:imeOptions="actionNext"
                    app:layout_constraintTop_toBottomOf="@id/labelSodio"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp"/>
                <TextView
                    android:id="@+id/textViewSodioAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    tools:text="@string/avaliacao_ideal"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/editTextSodio"
                    app:layout_constraintEnd_toEndOf="@id/editTextSodio"/>

                <TextView
                    android:id="@+id/labelPH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_ph"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@style/TextAppearance.App.Label"
                    app:layout_constraintTop_toBottomOf="@id/textViewSodioAvaliacao"
                    app:layout_constraintStart_toStartOf="@id/editTextPH"/>
                <EditText
                    android:id="@+id/editTextPH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:inputType="numberDecimal"
                    android:hint="@string/hint_ph"
                    android:background="@drawable/input_background"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/input_hint_color"
                    android:padding="12dp"
                    android:imeOptions="actionNext"
                    app:layout_constraintTop_toBottomOf="@id/labelPH"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp"/>
                <TextView
                    android:id="@+id/textViewPHAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    tools:text="@string/avaliacao_aceitavel"
                    app:layout_constraintTop_toBottomOf="@id/editTextPH"
                    app:layout_constraintEnd_toEndOf="@id/editTextPH"/>

                <TextView
                    android:id="@+id/labelResiduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_residuo_unidade"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@style/TextAppearance.App.Label"
                    app:layout_constraintTop_toBottomOf="@id/textViewPHAvaliacao"
                    app:layout_constraintStart_toStartOf="@id/editTextResiduoEvaporacao"/>
                <EditText
                    android:id="@+id/editTextResiduoEvaporacao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:inputType="numberDecimal"
                    android:hint="@string/hint_residuo"
                    android:background="@drawable/input_background"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/input_hint_color"
                    android:padding="12dp"
                    android:imeOptions="actionDone"
                    app:layout_constraintTop_toBottomOf="@id/labelResiduo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp"/>
                <TextView
                    android:id="@+id/textViewResiduoEvaporacaoAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    tools:text="@string/avaliacao_nao_recomendado"
                    app:layout_constraintTop_toBottomOf="@id/editTextResiduoEvaporacao"
                    app:layout_constraintEnd_toEndOf="@id/editTextResiduoEvaporacao"/>

                <TextView
                    android:id="@+id/labelDureza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_dureza_calculada"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@style/TextAppearance.App.Label"
                    app:layout_constraintTop_toBottomOf="@id/textViewResiduoEvaporacaoAvaliacao"
                    app:layout_constraintStart_toStartOf="@id/textViewDurezaCalculada"/>
                <TextView
                    android:id="@+id/textViewDurezaCalculada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/input_background_readonly"
                    android:textColor="@color/input_text_color"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    tools:text="70.5 mg/L"
                    app:layout_constraintTop_toBottomOf="@id/labelDureza"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp"/>
                <TextView
                    android:id="@+id/textViewDurezaAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    tools:text="@string/avaliacao_ideal"
                    app:layout_constraintTop_toBottomOf="@id/textViewDurezaCalculada"
                    app:layout_constraintEnd_toEndOf="@id/textViewDurezaCalculada"/>

                <TextView
                    android:id="@+id/labelAlcalinidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_alcalinidade_calculada"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@style/TextAppearance.App.Label"
                    app:layout_constraintTop_toBottomOf="@id/textViewDurezaAvaliacao"
                    app:layout_constraintStart_toStartOf="@id/textViewAlcalinidadeCalculada"/>
                <TextView
                    android:id="@+id/textViewAlcalinidadeCalculada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/input_background_readonly"
                    android:textColor="@color/input_text_color"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    tools:text="40.0 mg/L"
                    app:layout_constraintTop_toBottomOf="@id/labelAlcalinidade"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="488dp"/>
                <TextView
                    android:id="@+id/textViewAlcalinidadeAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    tools:text="@string/avaliacao_ideal"
                    app:layout_constraintTop_toBottomOf="@id/textViewAlcalinidadeCalculada"
                    app:layout_constraintEnd_toEndOf="@id/textViewAlcalinidadeCalculada"/>

                <Button
                    android:id="@+id/buttonResultados"
                    style="@style/Widget.App.Button.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/button_ver_resultados"
                    app:layout_constraintTop_toBottomOf="@id/textViewAlcalinidadeAvaliacao"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="320dp"/>

                <Button
                    android:id="@+id/buttonVoltar"
                    style="@style/Widget.App.Button.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/button_voltar"
                    app:layout_constraintTop_toBottomOf="@id/buttonResultados"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="320dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <FrameLayout
            android:id="@+id/ad_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>