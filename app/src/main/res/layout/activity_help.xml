<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".HelpActivity">

    <ScrollView
        android:id="@+id/scrollViewHelp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textViewHelpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_screen_title"
                android:textAppearance="@style/TextAppearance.App.Title"
                android:textSize="24sp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/textViewTopic1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_topic_1_param_qual_title"
                android:textAppearance="@style/TextAppearance.App.Title"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewTopic1Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/help_topic_1_param_qual_content"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/textViewTopic2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_topic_2_tds_title"
                android:textAppearance="@style/TextAppearance.App.Title"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewTopic2Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/help_topic_2_tds_content"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/textViewTopic3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_topic_3_scoring_system_title"
                android:textAppearance="@style/TextAppearance.App.Title"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewTopic3Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/help_topic_3_scoring_system_content"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/textViewTopicOcrTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_topic_ocr_title"
                android:textAppearance="@style/TextAppearance.App.Title"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewTopicOcrContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word"
                tools:text="@string/help_topic_ocr_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dourado_elegante"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_gerenciar_compra"
                android:textAppearance="@style/TextAppearance.App.Title"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_restaurar_compra"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/buttonRestorePurchase"
                    style="@style/Widget.App.Button.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/button_restaurar_compra"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_max="320dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>