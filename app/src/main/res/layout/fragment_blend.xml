<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/mainLayoutBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabeçalho Explicativo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blend_title"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/blend_description"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.7" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Seleção Água A -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blend_water_a_label"
                    android:textAppearance="@style/TextAppearance.App.Label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSelectWaterA"
                    style="@style/Widget.App.Button.Outline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/blend_select_water"
                    app:icon="@drawable/ic_water_drop"
                    app:iconGravity="start" />

                <TextView
                    android:id="@+id/textSelectedWaterA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="✓ Água Mineral XYZ"
                    tools:visibility="visible" />

                <!-- Campo Volume A -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutVolumeA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/blend_volume_hint"
                    android:visibility="gone"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:prefixText="@string/blend_volume_prefix"
                    app:suffixText="ml"
                    tools:visibility="visible">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputVolumeA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Seleção Água B -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="?attr/colorSecondary"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blend_water_b_label"
                    android:textAppearance="@style/TextAppearance.App.Label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSelectWaterB"
                    style="@style/Widget.App.Button.Outline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/blend_select_water"
                    app:icon="@drawable/ic_water_drop"
                    app:iconGravity="start" />

                <TextView
                    android:id="@+id/textSelectedWaterB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="✓ Água Premium ABC"
                    tools:visibility="visible" />

                <!-- Campo Volume B -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutVolumeB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/blend_volume_hint"
                    android:visibility="gone"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:prefixText="@string/blend_volume_prefix"
                    app:suffixText="ml"
                    tools:visibility="visible">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputVolumeB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botão Calcular -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCalculateBlend"
            style="@style/Widget.App.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:enabled="false"
            android:text="@string/blend_calculate_button"
            app:icon="@drawable/ic_calculate"
            app:iconGravity="start" />

        <!-- Card de Resultado -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBlendResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Título do Resultado -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blend_result_title"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textSize="22sp"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center" />

                <!-- Proporções -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/blend_water_a_short"
                            android:textAppearance="@style/TextAppearance.App.Label"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textProportionA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="60%" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="24sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/blend_water_b_short"
                            android:textAppearance="@style/TextAppearance.App.Label"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textProportionB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorSecondary"
                            tools:text="40%" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Volume Total -->
                <TextView
                    android:id="@+id/textTotalVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Volume Total: 1000ml" />

                <!-- Divisor -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/colorOnSurface"
                    android:alpha="0.2" />

                <!-- Score e Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/blend_score_label"
                            android:textAppearance="@style/TextAppearance.App.Label"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textBlendScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="85.5 pts" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/blend_status_label"
                            android:textAppearance="@style/TextAppearance.App.Label"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textBlendStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="IDEAL"
                            tools:textColor="@color/ideal_green" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divisor -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/colorOnSurface"
                    android:alpha="0.2" />

                <!-- Parâmetros Químicos -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blend_parameters_title"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface" />

                <LinearLayout
                    android:id="@+id/containerParameters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical" />

                <!-- Melhorias -->
                <TextView
                    android:id="@+id/labelImprovements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/blend_improvements_label"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textSize="16sp"
                    android:textColor="@color/ideal_green"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textImprovements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone"
                    tools:text="✅ Dureza atingiu a faixa ideal!\n✅ Alcalinidade atingiu a faixa ideal!"
                    tools:visibility="visible" />

                <!-- Avisos -->
                <TextView
                    android:id="@+id/labelWarnings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/blend_warnings_label"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textSize="16sp"
                    android:textColor="@color/acceptable_yellow"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textWarnings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone"
                    tools:text="⚠️ TDS elevado - água pode ter sabor mineral excessivo"
                    tools:visibility="visible" />

                <!-- Botões de Ação -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSaveBlend"
                        style="@style/Widget.App.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/blend_save_button"
                        app:icon="@drawable/ic_save"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonShareBlend"
                        style="@style/Widget.App.Button.Tonal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/blend_share_button"
                        app:icon="@drawable/ic_share"
                        app:iconGravity="start" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>