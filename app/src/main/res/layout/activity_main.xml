<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <View
        android:id="@+id/background_border_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/border_gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="@id/background_border_view"
        app:layout_constraintBottom_toTopOf="@+id/ad_container"
        app:layout_constraintStart_toStartOf="@id/background_border_view"
        app:layout_constraintEnd_toEndOf="@id/background_border_view"
        app:layout_constraintWidth_max="488dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_dados_agua"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.App.Title"
                android:textSize="24sp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_marca"
                android:textAppearance="@style/TextAppearance.App.Label"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/editTextMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/hint_marca"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:background="@drawable/input_background"
                android:textColor="@color/input_text_color"
                android:textColorHint="@color/input_hint_color"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_fonte"
                android:textAppearance="@style/TextAppearance.App.Label"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/editTextFonte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/hint_fonte"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:background="@drawable/input_background"
                android:textColor="@color/input_text_color"
                android:textColorHint="@color/input_hint_color"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="name"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_pais"
                        android:textAppearance="@style/TextAppearance.App.Label"
                        android:layout_marginBottom="8dp"/>
                    <AutoCompleteTextView
                        android:id="@+id/autoCompletePais"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:hint="@string/hint_digite"
                        android:inputType="text"
                        android:background="@drawable/input_background"
                        android:textColor="@color/input_text_color"
                        android:textColorHint="@color/input_hint_color"
                        android:padding="12dp"
                        android:autofillHints="countryName"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:id="@+id/layoutEstadoSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_estado"
                            android:textAppearance="@style/TextAppearance.App.Label"
                            android:layout_marginBottom="8dp"/>
                        <Spinner
                            android:id="@+id/spinnerEstado"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/input_background"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutEstadoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_estado"
                            android:textAppearance="@style/TextAppearance.App.Label"
                            android:layout_marginBottom="8dp"/>
                        <EditText
                            android:id="@+id/editTextEstado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:hint="@string/hint_insira_estado"
                            android:inputType="textCapWords"
                            android:imeOptions="actionNext"
                            android:background="@drawable/input_background"
                            android:textColor="@color/input_text_color"
                            android:textColorHint="@color/input_hint_color"
                            android:padding="12dp"
                            android:autofillHints="addressRegion"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_bicarbonato"
                android:textAppearance="@style/TextAppearance.App.Label"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/editTextBicarbonato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/hint_bicarbonato"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:background="@drawable/input_background"
                android:textColor="@color/input_text_color"
                android:textColorHint="@color/input_hint_color"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_calcio"
                android:textAppearance="@style/TextAppearance.App.Label"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/editTextCalcio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/hint_calcio"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:background="@drawable/input_background"
                android:textColor="@color/input_text_color"
                android:textColorHint="@color/input_hint_color"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_magnesio"
                android:textAppearance="@style/TextAppearance.App.Label"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/editTextMagnesio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/hint_magnesio"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:background="@drawable/input_background"
                android:textColor="@color/input_text_color"
                android:textColorHint="@color/input_hint_color"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/buttonNextToParams"
                    style="@style/Widget.App.Button.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/button_avancar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintWidth_max="320dp"/>

                <Button
                    android:id="@+id/buttonVoltar"
                    style="@style/Widget.App.Button.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/button_voltar"
                    app:layout_constraintTop_toBottomOf="@id/buttonNextToParams"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintWidth_max="320dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/ad_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/background_border_view"
        app:layout_constraintStart_toStartOf="@id/background_border_view"
        app:layout_constraintEnd_toEndOf="@id/background_border_view" />

</androidx.constraintlayout.widget.ConstraintLayout>