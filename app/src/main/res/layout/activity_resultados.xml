<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_resultados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".ResultadosActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/border_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_gold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/adContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="488dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/textViewTituloResultados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/title_resultados"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textSize="24sp"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/marrom_avermelhado_principal_escuro"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/textViewPontuacao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Pontuação: 22.50"
                            android:textAppearance="@style/TextAppearance.App.Body"
                            android:textSize="18sp"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:id="@+id/textViewQualidade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Qualidade Alta"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/creme_texto"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            tools:background="@drawable/background_box_ideal"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/marrom_avermelhado_principal_escuro"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_detalhes_parametros"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textSize="18sp"
                            android:layout_marginBottom="12dp"/>
                        <include layout="@layout/item_resultado_parametro" android:id="@+id/layout_ph"/>
                        <include layout="@layout/item_resultado_parametro" android:id="@+id/layout_dureza"/>
                        <include layout="@layout/item_resultado_parametro" android:id="@+id/layout_alcalinidade"/>
                        <include layout="@layout/item_resultado_parametro" android:id="@+id/layout_sodio"/>
                        <include layout="@layout/item_resultado_parametro" android:id="@+id/layout_residuo"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/buttonSalvarAvaliacao"
                        style="@style/Widget.App.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/button_salvar_avaliacao"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_max="320dp"/>

                    <Button
                        android:id="@+id/buttonNovaAvaliacao"
                        style="@style/Widget.App.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/button_nova_avaliacao"
                        app:layout_constraintTop_toBottomOf="@id/buttonSalvarAvaliacao"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_max="320dp"/>

                    <Button
                        android:id="@+id/buttonVerHistorico"
                        style="@style/Widget.App.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/button_ver_historico"
                        app:layout_constraintTop_toBottomOf="@id/buttonNovaAvaliacao"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_max="320dp"/>

                    <Button
                        android:id="@+id/buttonVoltar"
                        style="@style/Widget.App.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/button_voltar"
                        app:layout_constraintTop_toBottomOf="@id/buttonVerHistorico"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_max="320dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>

        <!-- CORREÇÃO APLICADA AQUI: removido o paddingTop e paddingBottom -->
        <FrameLayout
            android:id="@+id/adContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
