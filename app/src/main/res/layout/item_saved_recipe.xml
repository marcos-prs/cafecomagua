<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ✅ Ícone indicador de receita -->
        <ImageView
            android:id="@+id/iconRecipe"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_water_drop"
            android:contentDescription="Ícone de receita"
            app:tint="@color/dourado_elegante"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textRecipeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/iconRecipe"
            app:layout_constraintBottom_toBottomOf="@id/iconRecipe"
            app:layout_constraintStart_toEndOf="@id/iconRecipe"
            app:layout_constraintEnd_toStartOf="@+id/buttonDeleteRecipe"
            tools:text="Receita V60 - Água da Casa" />

        <TextView
            android:id="@+id/textRecipeDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/iconRecipe"
            app:layout_constraintStart_toStartOf="@id/iconRecipe"
            app:layout_constraintEnd_toStartOf="@id/buttonDeleteRecipe"
            tools:text="Salva em 10/11/2025 14:30" />

        <!-- ✅ Botão delete com melhor posicionamento -->
        <ImageButton
            android:id="@+id/buttonDeleteRecipe"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="?attr/colorError"
            android:contentDescription="Excluir receita"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textRecipeDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ✅ Label para as gotas -->
        <TextView
            android:id="@+id/labelComposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Composição:"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textRecipeDrops"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/labelComposition"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="• Cálcio: 5 gotas\n• Magnésio: 2 gotas\n• Potássio: 4 gotas" />

        <!-- ✅ Indicador "Toque para ver detalhes" -->
        <TextView
            android:id="@+id/textTapHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Toque para ver mais detalhes ➜"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/dourado_elegante"
            android:textStyle="italic"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/textRecipeDrops"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>